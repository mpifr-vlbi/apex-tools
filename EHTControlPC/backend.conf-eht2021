        - dbbc3.all:C_e0  mark6.usb_hi:eth3  # eth2+eth3 kaputt, eth4+eth5 kaputt (visible, but "ADDRCONF(NETDEV_UP): eth*: link is not ready")
        - dbbc3.all:D_e0  mark6.usb_hi:eth5

