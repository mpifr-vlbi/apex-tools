# This file describes the network interfaces available on your system
# and how to activate them. For more information, see interfaces(5).

# Make sure NetworkManager is not in use
# $ cat /etc/resolv.conf
# domain mpifr-bonn.mpg.de
# search mpifr-bonn.mpg.de
# nameserver 134.104.18.187
# nameserver 134.104.18.57
# $ apt-get remove --purge network-manager network-manager-gnome network-manager-pptp network-manager-pptp-gnome
# $ apt-get purge network-manager network-manager-gnome knetworkmanager

# The loopback network interface
auto lo
iface lo inet loopback

# The primary network interface
allow-hotplug eth0
auto eth0

# Bonn VLBI lab
iface eth0 inet dhcp

# Myricom cards eth2 - eth5
# http://www.subnet-calculator.com/
#  netmask 255.255.255.240 to use lower 4-bit for each net
#  eth2 : 10.10.1.1  -- 10.10.1.14 net .0  bcast .15
#  eth3 : 10.10.1.17 -- 10.10.1.30 net .16 bcast .31
#  eth4 : 10.10.1.33 -- 10.10.1.46 net .32 bcast .47
#  eth5 : 10.10.1.49 -- 10.10.1.62 net .48 bcast .63

allow-hotplug eth2
iface eth2 inet static
        network 10.10.1.0
        address 10.10.1.1
        broadcast 10.10.1.15
        netmask 255.255.255.240
        mtu 9000

allow-hotplug eth3
iface eth3 inet static
        network 10.10.1.16
        address 10.10.1.17
        broadcast 10.10.1.31
        netmask 255.255.255.240
        mtu 9000

allow-hotplug eth4
iface eth4 inet static
        network 10.10.1.32
        address 10.10.1.33
        broadcast 10.10.1.47
        netmask 255.255.255.240
        mtu 9000

allow-hotplug eth5
iface eth5 inet static
        network 10.10.1.48
        address 10.10.1.49
        broadcast 10.10.1.63
        netmask 255.255.255.240
        mtu 9000

